{
  "name": "scoreboard_poetry_slam",
  "version": "2.1.0",
  "description": "Poetry Slam Scoreboard - AngularJS Desktop Application",
  "main": "src/electron.js",
  "repository": "git@github.com:ungeschneuer/scoreboard_poetry_slam.git",
  "author": "Marcel <marcel@schneuer.online>",
  "license": "MIT",
  "private": true,
  "build": {
    "appId": "eu.spektakel.scoreboard_poetry_slam",
    "productName": "Poetry Slam Scoreboard",
    "icon": "public/media-optimized/logo/logo.ico",
    "files": [
      "public/**/*",
      "src/electron.js",
      "performance-monitor.js",
      "assets/**/*",
      "!public/optimized*/**/*",
      "!public/test-*.html",
      "!public/admin-*.html",
      "!**/*.md",
      "!**/webpack*.js",
      "!**/bundle-*.js",
      "!**/comprehensive-*.js",
      "!**/material-*.js",
      "!**/icon-*.js"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "icon": "public/media-optimized/logo/logo.ico",
      "bundleVersion": "2.0.0"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "public/media-optimized/logo/logo.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Poetry Slam Scoreboard",
      "installerIcon": "public/media-optimized/logo/logo.ico",
      "uninstallerIcon": "public/media-optimized/logo/logo.ico",
      "installerHeaderIcon": "public/media-optimized/logo/logo.ico"
    },
    "dmg": {
      "title": "Poetry Slam Scoreboard",
      "background": "public/media-optimized/logo/logo_512.png",
      "iconSize": 100,
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "compression": "maximum",
    "extraMetadata": {
      "version": "2.0.0",
      "description": "Poetry Slam Scoreboard - Optimized Desktop Application"
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "prebuild": "node pre-build.js",
    "build": "npm run prebuild && electron-builder",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:win:portable": "npm run prebuild && electron-builder --win portable",
    "build:win:installer": "npm run prebuild && electron-builder --win nsis",
    "setup:win": "node create-windows-icon.js",
    "build:verify": "node build-verification.js",
    "optimize": "node comprehensive-bundle-reduction-summary.js",
    "optimize:legacy": "node optimize-bundles.js",
    "analyze": "node bundle-size-reduction-plan.js",
    "build:vendor-split": "webpack --config webpack.vendor-split.config.js --mode=production",
    "build:vendor-split:dev": "webpack --config webpack.vendor-split.config.js --mode=development",
    "clean": "rm -rf dist public/optimized public/vendor-split release",
    "serve": "node src/server.js",
    "test:compression": "npm start"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/static": "^6.5.0",
    "fastify": "^4.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "^31.6.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.33.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "js-beautify": "^1.15.4",
    "mini-css-extract-plugin": "^2.9.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "url-loader": "^4.1.1",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
}
