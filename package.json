{
  "name": "scoreboard_poetry_slam",
  "version": "2.0.0",
  "description": "Poetry Slam Scoreboard - AngularJS Desktop Application",
  "main": "src/electron.js",
  "repository": "git@github.com:Pandibrudi/scoreboard_poetry_slam.git",
  "author": "Gregor <gluastoned@gmail.com>",
  "license": "MIT",
  "private": true,
  "build": {
    "appId": "eu.fomp.scoreboard_poetry_slam",
    "icon": "assets/angela_256.png",
    "files": [
      "public/**/*",
      "src/electron.js",
      "assets/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "build": "electron-builder",
    "optimize": "node comprehensive-bundle-reduction-summary.js",
    "optimize:legacy": "node optimize-bundles.js",
    "analyze": "node bundle-size-reduction-plan.js",
    "build:vendor-split": "webpack --config webpack.vendor-split.config.js --mode=production",
    "build:vendor-split:dev": "webpack --config webpack.vendor-split.config.js --mode=development",
    "clean": "rm -rf dist public/optimized public/vendor-split",
    "serve": "node src/server.js",
    "test:compression": "npm start"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/static": "^6.5.0",
    "fastify": "^4.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.33.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "js-beautify": "^1.15.4",
    "mini-css-extract-plugin": "^2.9.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "url-loader": "^4.1.1",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
}
